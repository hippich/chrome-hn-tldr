{
  "manifest_version": 2,
  "name": "Reddit tl;dr",
  "version": "0.0.2",
  "description": "Mark comments as having story tl;dr",
  "browser_action": {
    "name": "Reddit tl;dr",
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": [ "http://www.reddit.com/*", "https://www.reddit.com/*"],
    "js": [ 
      "jquery.min.js", 
      "underscore-min.js", 
      "backbone-min.js", 
      "backbone-relational.js",
      "json2.js", 
      "markdown.js",
      "models.js", 
      "views.js", 
      "tldr.js" 
    ],
    "css": [
      "tldr.css"
    ]
  }],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "http://hntldr:3000/*",
    "http://hntldr.com/*",
    "https://hntldr.com/*",
    "http://api.hntldr.com/*",
    "https://api.hntldr.com/*"
  ]
}
